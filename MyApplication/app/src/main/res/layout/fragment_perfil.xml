<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ezee.myapplication.Fragmento_Perfil">

    <!-- TODO: Update blank fragment layout -->


    <RelativeLayout
        android:id="@+id/superior"
        android:layout_width="match_parent"
        android:layout_height="133dp">
        <ImageView
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:id="@+id/imageView"
            android:layout_gravity="left|top"
            android:background="@drawable/perro"
            android:layout_alignParentBottom="true" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:inputType="textPersonName"
            android:text="Nombre"
            android:ems="10"
            android:id="@+id/editText"
            android:layout_alignParentTop="true"
            android:textSize="50dp"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/imageView"
            android:layout_above="@+id/button" />

        <com.facebook.login.widget.LoginButton
            android:id="@+id/login_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="clic"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="29dp"
            android:layout_toEndOf="@+id/imageView" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Editar tu perfil"
            android:id="@+id/button"
            android:onClick="editar"
            android:textSize="10dp"
            android:layout_above="@+id/login_button"
            android:layout_alignEnd="@+id/login_button"
            android:layout_toEndOf="@+id/imageView" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/inferior"
        android:layout_width="match_parent"
        android:layout_height="381dp"
        android:layout_below="@+id/imageView"
        android:layout_alignParentStart="true"
        android:layout_gravity="right|bottom">




        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText3"
            android:text="Tus recitales"
            android:textSize="30dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true" />

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:id="@+id/listView"
            android:layout_below="@+id/editText3"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText4"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:text="DescripciÃ³n"
            android:textSize="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Me gusta Divididos y Las pelotas"
            android:id="@+id/textView"
            android:layout_below="@+id/editText4"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

</FrameLayout>
