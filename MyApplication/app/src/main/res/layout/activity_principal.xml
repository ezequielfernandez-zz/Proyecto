<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#3F51B5"
    android:orientation="horizontal"
    tools:context="com.example.ezee.myapplication.MenuInferior"
    android:baselineAligned="true"
    android:gravity="center_horizontal">


    <ImageButton
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:id="@+id/Inicio"
        android:background="@drawable/home"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:onClick="Inicio"/>

    <ImageButton
        android:layout_width="65dp"
        android:layout_height="70dp"
        android:id="@+id/Recitales"
        android:background="@drawable/guitar"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/Inicio"
        android:layout_marginStart="40dp"
        android:layout_marginTop="10dp"
        android:onClick="Recitales"/>


    <ImageButton
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:id="@+id/AgregarRecital"
        android:background="@drawable/guitarmas"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/Recitales"
        android:layout_marginStart="35dp"
        android:layout_marginTop="10dp"
        android:onClick="AgregarRecital"/>

    <ImageButton
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:id="@+id/Perfil"
        android:background="@drawable/man"
        android:clickable="false"
        android:saveEnabled="false"
        android:layout_marginRight="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:onClick="Perfil"/>


</RelativeLayout>